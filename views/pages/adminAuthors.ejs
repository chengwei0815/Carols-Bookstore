<!-- main-content section starts  -->

<section class="main-content" id="main-content">

  <h1 class="heading"> <span>admin - authors</span> </h1>

      <div class="main-content-layout">

        <% for (author of authorArray)  { %>
          <div class="box">
              <div class="content">
                  <h3><%= author.firstName %> <%= author.lastName %></h3>
                  <a href="./<%= author._id %>/edit-author" class="btn">edit</a> 
                  <form action="/authors/<%= author._id %>?_method=DELETE" method="POST" enctype="application/x-www-form-urlencoded" class="inline">
                    <button class="btn" type="submit">delete</button>
                  </form>   
              </div>
            </div>
          <% } %> 

      </div>

</section>

<!-- main-content section ends -->

