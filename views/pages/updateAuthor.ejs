<%- include('../partials/head') -%> 
    
<%- include('../partials/adminNavbar') -%> 

<main>
  <h1 class="heading"> <span>update author</span> </h1>
  <form action="/authors/<%= foundAuthor._id %>?_method=PUT" method="POST">
    <div>
        <label for="firstName">First Name: </label>
        <input type="text" name="firstName" id="firstName" value="<%= foundAuthor.firstName %>"/>
    </div>

    <div>
      <label for="lastName">Last Name: </label>
      <input type="text" name="lastName" id="lastName" value="<%= foundAuthor.lastName %>"/>
    </div>

    <div>
        <label for="birthYear">Birth Year: </label>
        <input type="text" name="birthYear" id="birthYear" value="<%= foundAuthor.birthYear %>"/>
    </div>

    <div>
        <label for="bio">Biography: </label>
        <textarea name="bio" id="bio" placeholder="Biography"><%= foundAuthor.bio %></textarea>
    </div>

    <div>
        <input type="submit" value="Submit" />
    </div>

</form>
</main>

